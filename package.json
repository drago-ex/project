{
  "name": "project",
  "version": "1.0.0",
  "dependencies": {
    "nette-forms": "^3.2.0"
  },
  "devDependencies": {
    "concurrently": "^6.2.0"
  },
  "scripts": {
    "postinstall": "composer install && npm run docker:build",
    "docker:build": "concurrently -n=nette -c=blue \"docker-compose up --build\"",
    "docker:run": "concurrently -n=nette -c=blue \"docker-compose --env-file ./.env.dev up\"",
    "docker:off": "docker-compose down"
  }
}
