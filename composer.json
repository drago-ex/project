{
	"name": "drago-ex/project",
	"type": "project",
	"description": "The basis for new projects on Drago Extension.",
	"require": {
		"php": ">=8.3 <9",
		"nette/robot-loader": "^4.1",
		"nette/assets": "^1.0",
		"latte/latte": "^3.1",
		"tracy/tracy": "^2.11",
		"drago-ex/project-front": "^1.0",
		"drago-ex/bootstrap": "^1.0"
	},
	"minimum-stability": "stable",
	"require-dev": {
		"phpstan/phpstan-nette": "^1.2.9"
	},
	"autoload": {
		"psr-4": {
			"App\\": "app"
		}
	},
	"scripts": {
		"phpstan": "phpstan analyse --level 5 --configuration phpstan.neon app",
		"post-install-cmd": [
			"php vendor.copy.php",
			"php vendor.clean.php"
		],
		"post-update-cmd": [
			"php vendor.copy.php",
			"php vendor.clean.php"
		]
	},
	"config": {
		"allow-plugins": {
			"drago-ex/project-front": true
		}
	}
}
